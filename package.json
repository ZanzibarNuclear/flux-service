{
  "name": "flux-service",
  "version": "0.1.0",
  "description": "Backend to support Flux, the social exchange for Zanzibar's World of Nuclear Energy.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "bash scripts/migrate.sh",
    "seed": "bash scripts/seed.sh",
    "generate": "kysely-codegen --dialect=postgres --out-file=./src/db/types.ts",
    "generate-help": "kysely-codegen --help",
    "test": "node --test test/**/*.test.js"
  },
  "keywords": [
    "social",
    "exchange",
    "nuclear",
    "energy",
    "microservice",
    "fastify"
  ],
  "author": "Nuclear Ambitions LLC",
  "license": "Apache-2.0",
  "dependencies": {
    "@fastify/autoload": "^6.0.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/oauth2": "^8.1.0",
    "@fastify/sensible": "^6.0.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "fastify": "^5.0.0",
    "fastify-cli": "^7.0.1",
    "fastify-plugin": "^5.0.0",
    "kysely": "^0.27.4",
    "pg": "^8.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.7.8",
    "@types/pg": "^8.11.10",
    "kysely-codegen": "^0.17.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
